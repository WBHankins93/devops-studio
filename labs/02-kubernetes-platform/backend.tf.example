# backend.tf.example
# Example backend configuration for Terraform state
# Copy this file to backend.tf and customize, or use setup-backend.sh

terraform {
  required_version = ">= 1.5"
  
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.23"
    }
    helm = {
      source  = "hashicorp/helm"
      version = "~> 2.11"
    }
  }

  backend "s3" {
    bucket         = "devops-studio-terraform-state-XXXXXXXX"
    key            = "labs/02-kubernetes-platform/terraform.tfstate"
    region         = "us-west-2"
    encrypt        = true
    dynamodb_table = "devops-studio-terraform-locks"
  }
}

