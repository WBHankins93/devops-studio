# backend.tf.example
# Example backend configuration for Terraform state
# Copy this file to backend.tf and customize, or use setup-backend.sh

terraform {
  required_version = ">= 1.5"
  
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.5"
    }
  }

  backend "s3" {
    bucket         = "devops-studio-terraform-state-XXXXXXXX"
    key            = "labs/01-terraform-foundations/terraform.tfstate"
    region         = "us-west-2"
    encrypt        = true
    dynamodb_table = "devops-studio-terraform-locks"
  }
}

provider "aws" {
  region = var.region
  
  default_tags {
    tags = var.tags
  }
}

provider "random" {}

